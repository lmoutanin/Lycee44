{% extends 'base.html.twig' %}

{% block title %}Log in!
{% endblock %}

{% block body %}
	<form method="post">
		<div class="form-group"></div>
		{% if error %}
			<div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
		{% endif %}

		{% if app.user %}
			<div class="mb-3">
				You are logged in as
				{{ app.user.userIdentifier }},
				<a href="{{ path('app_logout') }}">Logout</a>
			</div>
		{% endif %}
 		 
			<center> <a href='https://postimages.org/' target='_blank'><img src='https://i.postimg.cc/QCN6dKJV/logo.png' border='0' width="300"  alt='logo-97car'/></a> </center></br>
		<h1 class="h3 mb-3 font-weight-normal"></h1>
		<center>
		<label for="username"><strong>Utilisateur</strong</label></br></br>
		
		<input type="text" value="{{ last_username }}" name="_username" id="username" class="form-control"   autocomplete="username" required autofocus></br></br> 
		<label for="username"><strong>Mot de passer</strong</label></br></br>
		 
		<input type="password" name="_password" id="password" class="form-control" autocomplete="current-password" required>
		</center>
		<input
		type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

	{#
		  Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
		 See https://symfony.com/doc/current/security/remember_me.html
													
	  <div class="checkbox mb-3">
	 <input type="checkbox" name="_remember_me" id="_remember_me">
	 <label for="_remember_me">Remember me</label>
	 </div>
	 #}
	</br></br>
	<center>
	<button class="btn btn-lg btn-primary login-button" type="submit">
		Connexion
	</button>

	</center>

</div></form>{% endblock %}
